<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
	<name>plg_search_lupo</name>
	<author>Stefan Bauer</author>
	<creationDate>{{creationDate}}</creationDate>
	<copyright>Copyright (C) databauer / Stefan Bauer</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>stefan@databauer.ch</authorEmail>
	<authorUrl>https://www.ludothekprogramm.ch</authorUrl>
	<version>{{version_pkg_lupo}}</version>
	<description>PLG_SEARCH_LUPO_XML_DESCRIPTION</description>
	
	<files>
		<filename plugin="lupo">lupo.php</filename>
	</files>
	
	<languages>
		<language tag="en-GB">en-GB.plg_search_lupo.ini</language>
		<language tag="en-GB">en-GB.plg_search_lupo.sys.ini</language>
		<language tag="de-DE">de-DE.plg_search_lupo.ini</language>
		<language tag="de-DE">de-DE.plg_search_lupo.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>
				<field
						name="foto_show"
						type="radio"
						class="btn-group btn-group-yesno"
						default="1"
						label="PLG_SEARCH_LUPO_PHOTO"
						description="PLG_SEARCH_LUPO_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="Itemid" type="menuitem"
					default=""
					description=""
					label="Itemid"
					size="5"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
